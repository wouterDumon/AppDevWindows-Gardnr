<UserControl
    x:Class="Gardenr.UserClass.Menu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Gardenr.UserClass"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="500" Width="184.512">

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="45"/>

            <RowDefinition Height="45"/>
            <RowDefinition Height="45"/>
            <RowDefinition/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Width="45" Height="45" Margin="0" HorizontalAlignment="Left" ></Image>
        <TextBlock Grid.Row="0" Text="Menu" Margin="50 0 0 0" VerticalAlignment="Center" ></TextBlock>

        <Image Grid.Row="1" Width="45" Height="45" Margin="0" HorizontalAlignment="Left" >
        </Image>
        <TextBlock Grid.Row="1" Text="Home" Margin="50 0 0 0" VerticalAlignment="Center" ></TextBlock>
        <Image Grid.Row="2" Width="45" Height="45" Margin="0" HorizontalAlignment="Left" >
        </Image>
        <TextBlock Grid.Row="2" Text="Profiel" Margin="50 0 0 0" VerticalAlignment="Center" ></TextBlock>
        <Image Grid.Row="3" Width="45" Height="45" Margin="0" HorizontalAlignment="Left" >
        </Image>
        <TextBlock Grid.Row="3" Text="Catalogus" Margin="50 0 0 0" VerticalAlignment="Center" ></TextBlock>
        <Image Grid.Row="5" Width="45" Height="45" Margin="0" HorizontalAlignment="Left" >
        </Image>
        <TextBlock Grid.Row="5" Text="Instellingen" Margin="50 0 0 0" VerticalAlignment="Center" ></TextBlock>
    </Grid>

    
</UserControl>

