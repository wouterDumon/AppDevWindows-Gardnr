<Page
    x:Class="Gardenr.Views.CatalogusPlant"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Gardenr.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
  
    xmlns:vm="using:Gardenr.ViewModels">
   
    <Page.DataContext>
        <vm:CatalogusPlantVM></vm:CatalogusPlantVM>
    </Page.DataContext>
    <Page.Resources>
        <vm:ConvertToStrign x:Key="StringConverter"></vm:ConvertToStrign>
    </Page.Resources>
    <Grid Background="#01FF70">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.ColumnSpan="2" Grid.Row="0"  FontSize="28" Margin="48,1,0,1" VerticalAlignment="Center" Text="{Binding plant.Naam}"></TextBlock>
        <Image Source="{Binding plant.FotoUrl}" Grid.Row="1" Grid.ColumnSpan="2" ></Image>
        <Button Background="Blue" Grid.Row="2"  Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="ZaaiKalender" Margin="20" ></Button>

 
            <TextBlock Text="Zaaidiepte: " Grid.Column="0" Grid.Row="3" ></TextBlock>
            <TextBlock Text="{Binding plant.ZaaiDiepte}" Grid.Column="1" Grid.Row="3"></TextBlock>
       
        <TextBlock Text="Afstand tussen: " Grid.Column="0" Grid.Row="4" ></TextBlock>
            <TextBlock Text="{Binding plant.AfstandTussen}" Grid.Column="1" Grid.Row="4"></TextBlock>
            <TextBlock Text="Afstand rij: " Grid.Column="0" Grid.Row="5" ></TextBlock>
            <TextBlock Text="{Binding plant.AfstandRij}" Grid.Column="1" Grid.Row="5"></TextBlock>
            <TextBlock Text="Water geven: " Grid.Column="0" Grid.Row="6" ></TextBlock>
            <TextBlock Text="{Binding plant.WaterGeven}" Grid.Column="1" Grid.Row="6"></TextBlock>
            <TextBlock Text="Dagen tot oogst: " Grid.Column="0" Grid.Row="7" ></TextBlock>
            <TextBlock Text="{Binding plant.DagenOogst}" Grid.Column="1" Grid.Row="7"></TextBlock>
            <TextBlock Text="Dagen tot verplanten: " Grid.Column="0" Grid.Row="8" ></TextBlock>
            <TextBlock Text="{Binding plant.DagenVerplanten}" Grid.Column="1" Grid.Row="8"></TextBlock>
            <TextBlock Text="Mag binnen: " Grid.Column="0" Grid.Row="9" ></TextBlock>
            <TextBlock Text="{Binding plant.Binnen, Converter={StaticResource StringConverter}}" Grid.Column="1" Grid.Row="9"></TextBlock>
            <TextBlock Text="Mag buiten: " Grid.Column="0" Grid.Row="10" ></TextBlock>
            <TextBlock Text="{Binding plant.Buiten, Converter={StaticResource StringConverter}}" Grid.Column="1" Grid.Row="10"></TextBlock>
       

    </Grid>
</Page>

