<Page
    x:Class="Gardenr.Views.Profiel_Historiek"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Gardenr.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="using:Gardenr.UserClass"
    mc:Ignorable="d"
    xmlns:vm="using:Gardenr.ViewModels">

    <Page.DataContext>
        <vm:ProfielVM></vm:ProfielVM>
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Profiel" Grid.Row="0" Grid.ColumnSpan="2"></TextBlock>
        <TextBlock Text="..." Grid.Column="2" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right" ></TextBlock>
        <Button  Content="Huidig" Grid.Row="1" Grid.Column="0" Background="Transparent" HorizontalAlignment="Center" Command="{Binding GoHuiding}"></Button>
        <Button  FontWeight="Bold" Content="Historiek" Grid.Row="1" Grid.Column="1" Background="Transparent" HorizontalAlignment="Center"></Button>
        <Button Content="Favorieten" Grid.Row="1" Grid.Column="2" Background="Transparent" HorizontalAlignment="Center" Command="{Binding GoFavoriet}"></Button>


        <ListView x:ConnectionId='1'  HorizontalContentAlignment="Stretch"  Name="ListItems"  SelectedItem="{Binding SelectedPlant, Mode=TwoWay}" ItemsSource="{Binding HistoriekPlant, Mode=OneWay}" Grid.Row="2" Grid.ColumnSpan="3"                          >

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Background="Transparent" Padding="10 10 10 10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="{Binding Plant.FotoUrl}"  Grid.Row="0" Grid.Column="0"  Grid.RowSpan="3" Margin="0,0,10,0" ></Image>
                        <TextBlock   Text="{Binding Plant.Naam, Mode=OneWay}" Grid.Row="0" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="2"></TextBlock>
                        <TextBlock Text="{Binding LaatstWater, Mode=OneWay}" Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="2"></TextBlock>

                    </Grid>



                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

    </Grid>
</Page>

