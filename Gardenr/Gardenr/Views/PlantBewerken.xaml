<Page
    x:Class="Gardenr.Views.PlantBewerken"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Gardenr.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:vm="using:Gardenr.ViewModels">
    <Page.Resources>
        <Style x:Key="headerS" TargetType="Rectangle">
            <Setter Property="Fill">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#329465" Offset="0"/>
                        <GradientStop Color="#339461" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="bodyS" TargetType="Rectangle">
            <Setter Property="Fill" Value="#FFFFFF"/>
        </Style>
        <Style x:Key="notificationS" TargetType="Grid">
            <Setter Property="Background" Value="#abd3a8"/>
        </Style>
        <Style x:Key="TextS" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        <Style x:Key="Text2" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#659d46"/>
        </Style>
    </Page.Resources>
    <Page.DataContext>
        <vm:PlantBewerkenVM></vm:PlantBewerkenVM>
    </Page.DataContext>


    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Style="{StaticResource headerS}" Grid.ColumnSpan="3"></Rectangle>
        <Rectangle Grid.Row="1" Grid.RowSpan="15" Style="{StaticResource bodyS}" Grid.ColumnSpan="3"/>
        <TextBlock Style="{StaticResource TextS}"  Text="Plant bewerken"  FontSize="28" Margin="48 0 0 0" Grid.Row="0" Grid.ColumnSpan="2"></TextBlock>

        <Button Content="B" Margin="25,0,0,0" Grid.Column="0" Command="{Binding GoBack}"></Button>
           
     


        <CommandBar Background="Transparent" Margin="0 -5 0 0" IsSticky="true" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right">
            <CommandBar.SecondaryCommands>
                <AppBarButton Command="{Binding SavePlant}" Label="Opslaan"/>
                <AppBarButton Command="{Binding AddFavorites}" Label="Favoriet"/>
                <AppBarButton Command="{Binding DeletePlant}" Label="Verwijderen"/>
            </CommandBar.SecondaryCommands>
        </CommandBar>

        <Image x:Name="image" Source="{ Binding TeBewerkenTuin.Plant.FotoUrl}" Grid.Row="1" Margin="0,0,0,0" VerticalAlignment="Top" Width="370"/>
        
        <TextBlock Text="Zaaidag: " Grid.Row="3" Margin="20,0,0,0"/>
        <TextBlock Text="{Binding TeBewerkenTuin.Plant.ZaaiBegin}" Grid.Row="3" Grid.Column="2"/>
        <TextBlock Text="OogstDatum: " Grid.Row="3" Margin="20,30,0,0"/>
        <TextBlock Text="{Binding OogstDatum}" Grid.Row="3" Grid.Column="2" Margin="0,30,0,0"/>
        <TextBlock Text="Laatst water gegeven: " Grid.Row="3" Margin="20,60,0,0" />
        <TextBlock Text="{Binding TeBewerkenTuin.LaatstWater}" Grid.Row="3" Grid.Column="2" Margin="0,60,0,0"/>
        
        <TextBlock Text="Notificaties" FontSize="20" Grid.Row="4" Grid.ColumnSpan="3" HorizontalAlignment="Center"/>
        <ListView  HorizontalContentAlignment="Stretch"  Name="ListItems"  SelectedItem="{Binding SelectedNotificatie, Mode=TwoWay}" ItemsSource="{Binding TeBewerkenTuin.Notificaties, Mode=OneWay}" Grid.Row="4" Grid.ColumnSpan="3" Margin="20,35,90,0" Tapped="ListItems_Tapped" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="15"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="15"/>
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0"/>
                        <TextBlock Text="tijd" Grid.Row="1"/>
                        <TextBlock Text="Titel" Grid.Row="2"/>
                        <TextBlock Text=">" FontSize="20" TextAlignment="Center" Grid.Row="3"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid Grid.Row="4" Margin="63,40,20,0" Grid.Column="2" Tapped="Grid_Tapped" >
            <TextBlock Text="Add" TextAlignment="Center"/>
            <!--image van + idp-->
            <TextBlock Text="+" FontSize="40" TextAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        <TextBlock Text="MemoBlock" FontSize="20" Grid.Row="5" Grid.ColumnSpan="3" HorizontalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.ColumnSpan="3" Text="{Binding TeBewerkenTuin.extra, Mode=TwoWay}" Margin="10,30,10,30"/>
    </Grid>
</Page>
