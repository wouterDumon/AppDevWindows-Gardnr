<Page
    x:Class="Gardenr.Views.PlantBewerken"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Gardenr.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:vm="using:Gardenr.ViewModels">
    <Page.DataContext>
        <vm:PlantBewerkenVM></vm:PlantBewerkenVM>
    </Page.DataContext>


    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        
            <Button Content="B" Margin="10,0,0,0" Grid.Column="0"></Button>
            <TextBlock Text="testing" HorizontalAlignment="Center" Grid.Column="1"></TextBlock>
            <TextBlock Text="..." FontWeight="Bold" Grid.Column="2"></TextBlock>

        
        <Image x:Name="image" Grid.Row="1" Margin="0,0,0,0" VerticalAlignment="Top" Width="370"/>
        
        <TextBlock Text="Zaaidag: " Grid.Row="3" Margin="20,0,0,0"/>
        <TextBlock Text="Zaaidag: " Grid.Row="3" Grid.Column="2"/>
        <TextBlock Text="Dagen tot oogst: " Grid.Row="3" Margin="20,30,0,0"/>
        <TextBlock Text="Zaaidag: " Grid.Row="3" Grid.Column="2" Margin="0,30,0,0"/>
        <TextBlock Text="Laatst water gegeven: " Grid.Row="3" Margin="20,60,0,0" />
        <TextBlock Text="Zaaidag: " Grid.Row="3" Grid.Column="2" Margin="0,60,0,0"/>
        
        <TextBlock Text="Notificaties" FontSize="20" Grid.Row="4" Grid.ColumnSpan="3" HorizontalAlignment="Center"/>
        <ListView  HorizontalContentAlignment="Stretch"  Name="ListItems"  SelectedItem="{Binding SelectedNotificatie, Mode=TwoWay}" ItemsSource="{Binding Notificaties, Mode=OneWay}" Grid.Row="4" Grid.ColumnSpan="3" Tapped="ListItems_Tapped" Margin="0,35,0,0" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock Text="MemoBlock" FontSize="20" Grid.Row="5" Grid.ColumnSpan="3" HorizontalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.ColumnSpan="3" Margin="10,30,10,30"/>
    </Grid>
</Page>
